<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApodTestApp.SetRangeDate"
             Title="SetRangeDate">
    <VerticalStackLayout>
        <Label 
            Text="Choose a date range for your images"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="Choose a start date"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <DatePicker 
            x:Name="StartDatePicker"
            DateSelected="StartDatePicker_DateSelected"
            MinimumDate="01/01/2022"
            MaximumDate="12/31/2022"
            Date="06/21/2022" />
        <Label 
            Text="Choose an end date"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <DatePicker 
            x:Name="EndDatePicker"
            DateSelected="EndDatePicker_DateSelected"
            MinimumDate="01/01/2022"
            MaximumDate="12/31/2022"
            Date="06/21/2022" />
        <Button x:Name="ChooseDateRange"
            Clicked="ChooseDateRange_Clicked"
            Text="Go"
            HeightRequest="30" 
            WidthRequest="100" />
    </VerticalStackLayout>
</ContentPage>