<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ApodTestApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ApodTestApp"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>


        <ShellContent
            Icon="house.png"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />        
        <ShellContent
            Icon="calendar_check.png"
            ContentTemplate="{DataTemplate local:ChooseStartDate}"
            Route="ChooseStartDate" />
        <ShellContent
            Icon="calendar_days.png"
            ContentTemplate="{DataTemplate local:SetRangeDate}"
            Route="SetRangeDate" />
        <ShellContent
            Icon="shuffle.png"
            ContentTemplate="{DataTemplate local:PickRandomNumber}"
            Route="PickRandomNumber" />
        <ShellContent
             Icon="display.png"
            ContentTemplate="{DataTemplate local:SlideShowPage}"
            Route="SlideShow" />
        
    </TabBar>

</Shell>
