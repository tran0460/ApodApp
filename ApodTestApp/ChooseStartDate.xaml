<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApodTestApp.ChooseStartDate"
             Title="ChooseStartDate">

    <VerticalStackLayout>
        <Label 
            Text="Choose a start date for your images!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <DatePicker 
            x:Name="StartDatePicker"
            MinimumDate="01/06/1995"
            DateSelected="DatePicker_DateSelected"
                    />
        
        <Button x:Name="ChooseStartDateBtn"
                    Clicked="ChooseStartDateBtn_Clicked"
                    Text="Go"
                    HeightRequest="30" 
                    WidthRequest="100"
                    />
    </VerticalStackLayout>
</ContentPage>