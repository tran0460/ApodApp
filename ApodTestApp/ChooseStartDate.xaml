<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApodTestApp.ChooseStartDate"
             Title="ChooseStartDate">
    <VerticalStackLayout>
        <Label 
            Text="Choose a start date for your images!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <DatePicker MinimumDate="01/01/2022"
            MaximumDate="12/31/2022"
            Date="06/21/2022" />
        
        <Button x:Name="chooseStartDate"
                    Clicked="chooseStartDate_Clicked"
                    Text="Go"
                    HeightRequest="30" 
                    WidthRequest="100"
                    />
    </VerticalStackLayout>
</ContentPage>